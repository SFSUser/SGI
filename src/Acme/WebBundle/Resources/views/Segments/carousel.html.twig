{# empty Twig template #}
{% if not imagenes is empty %}
    <center>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% for x in imagenes %}
                    <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index + 1}}" class="active"></li>
                    {% endfor %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                {% for x in imagenes %}
                    <div class="item {% if loop.index == 1 %}active{% endif %}">
                        <div class="www-background" style="width: 100%;height: 400px;background-image: url({{x.original}});background-size: cover;">
                        </div>
                        <img style="display: none;" src="{{x.original}}" alt="{{titulo}}"/>
                    </div>
                {% endfor %}
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </center>
    <hr class="featurette-divider"/>
{% endif %}